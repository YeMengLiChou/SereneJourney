<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <ripple android:color="@color/login_blue_cornflower" android:radius="4dp">
            <item android:id="@android:id/mask">
                <shape>
                    <stroke android:width="1dp"/>
                    <corners android:radius="4dp" />
                    <solid/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/login_blue_cornflower"/>
                </shape>
            </item>
        </ripple>
    </item>


    <item>
        <shape android:useLevel="false">
            <solid android:color="@null" />

            <corners android:radius="4dp" />

            <!--边框宽度-->
            <stroke android:width="1dip" android:color="@color/login_blue_cornflower" />
        </shape>
    </item>


</selector>

